<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubentrivino.tiendaonline">

    <!--  Ubicaci贸n -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!--  C谩mara -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!--  Fotos / galer铆a (Android 13+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Opcional: para Android 12 e inferiores -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:label="Bella Store"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiendaOnline">

        <!--  API KEY de Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!--  FileProvider para manejar fotos de c谩mara -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!--  Selector de ubicaci贸n en mapa -->
        <activity
            android:name=".MapPickerActivity"
            android:exported="false" />

        <!--  Listado de agendamientos (ADMIN: Servicios de belleza) -->
        <activity
            android:name=".BeautyOrdersActivity"
            android:exported="false" />

        <!--  Detalle del agendamiento (ADMIN) -->
        <activity
            android:name=".BeautyOrderDetailActivity"
            android:exported="false" />

        <!--  Pantalla de compras / cat谩logo -->
        <activity
            android:name=".ShopActivity"
            android:exported="false"
            android:excludeFromRecents="true" />

        <!--  Carrito / pedidos -->
        <activity
            android:name=".OrdersActivity"
            android:exported="false"
            android:label="@string/title_cart"
            android:excludeFromRecents="true" />

        <!--  Configuraci贸n -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!--  Formulario de agendamiento de servicios de belleza (usuario) -->
        <activity
            android:name=".BeautyActivity"
            android:exported="false" />

        <!--  Perfil -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!--  Hist贸rico de compras -->
        <activity
            android:name=".PedidosActivity"
            android:exported="false"
            android:label="@string/title_mis_compras" />

        <!--  Registro -->
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.TiendaOnline.NoActionBar"
            android:exported="false" />

        <!--  Login -->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.TiendaOnline.NoActionBar"
            android:exported="false" />

        <!--  Bienvenida -->
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Theme.TiendaOnline.NoActionBar"
            android:exported="false" />

        <!--  Detalle de producto -->
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false"
            android:label="Detalle del producto"
            android:parentActivityName=".ShopActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShopActivity" />
        </activity>

        <!--  Formulario de producto (crear / editar) -->
        <activity
            android:name=".ProductFormActivity"
            android:exported="false"
            android:label="Producto"
            android:parentActivityName=".ShopActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShopActivity" />
        </activity>

        <!--  Splash (launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TiendaOnline.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
